{
    "properties": {
        "displayName": "Modify storage account network defaults",
        "description": "Corrects non-compliant storage accounts to have public network access disabled",
        "mode": "All",
        "metadata": {
            "version": "1.0.0",
            "category": "Security"
        },
        "parameters": {
            "effectType": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Disabled turns off the policy, DeployIfNotExists corrects the non-compliant resource",
                    "portalReview": "true"
                },
                "allowedValues": [
                    "DeployIfNotExists",
                    "Disabled"
                ],
                "defaultValue": "DeployIfNotExists"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Storage/storageAccounts"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effectType')]",
                "details": {
                    "type": "Microsoft.Storage/storageAccounts",
                    "roleDefinitionIds": [
                        "/providers/microsoft.authorization/roleDefinitions/17d1049b-9a84-46fb-8f53-869881c3d3ab"
                    ],
                    "existenceCondition": {
                        "field": "Microsoft.Storage/storageAccounts/networkAcls.defaultAction",
                        "equals": "Deny"
                    },
                    "evaluationDelay": "AfterProvisioningSuccess",
                    "deployment": {
                        "properties": {
                            "mode": "incremental",
                            "template": {
                                "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                "contentVersion": "1.0.0.0",
                                "parameters": {
                                    "location": {
                                        "type": "string"
                                    },
                                    "saName": {
                                        "type": "string"
                                    }
                                },
                                "resources": [
                                    {
                                        "name": "[parameters('saName')]",
                                        "type": "Microsoft.Storage/storageAccounts",
                                        "apiVersion": "2023-04-01",
                                        "location": "[parameters('location')]",
                                        "properties": {
                                            "networkAcls": {
                                                "defaultAction": "Deny",
                                                "bypass": "AzureServices"
                                            }
                                        }
                                    }
                                ]
                            },
                            "parameters": {
                                "saName": {
                                    "value": "[field('name')]"
                                },
                                "location": {
                                    "value": "[field('location')]"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}